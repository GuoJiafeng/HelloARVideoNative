   </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="8dp"
            android:layout_height="27dp"
