<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sinup_bg_2">
    <ImageView
        android:id="@+id/login_exit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/exit_1"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="注册"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/textView" />
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/singuo_phonenumber"
        android:layout_marginTop="44dp"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/login_exit"
        android:layout_centerHorizontal="true">
<ImageView
    android:layout_width="15dp"
    android:layout_height="30dp"
    android:background="@drawable/singup_cellphone"
    android:layout_marginLeft="24dp"
    android:layout_marginStart="24dp"
    android:id="@+id/imageView5"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
        <EditText
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:id="@+id/singup_phonenumbertext"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/singup_edittext"
        android:layout_marginTop="34dp"
        android:id="@+id/relativeLayout4"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="19dp"
            android:background="@drawable/singup_testnumber"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView6" />
        <EditText
            android:gravity="center"
            android:hint="手机验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/singup_testnumbertext"
            android:layout_alignTop="@+id/imageView6"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:id="@+id/singuo_gettestnumber"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/singup_edittext"
        android:id="@+id/relativeLayout5"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/relativeLayout4"
        android:layout_alignStart="@+id/relativeLayout4">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/singup_password"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView7" />
<EditText
    android:id="@+id/singup_setpassword"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="设置密码"
    android:background="@null"
    android:layout_toRightOf="@+id/imageView7"
    android:layout_toEndOf="@+id/imageView7"
    android:layout_marginLeft="31dp"
    android:layout_marginStart="31dp"
    android:layout_alignBottom="@+id/imageView7" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:background="@drawable/singup_alredayhavaaccount"
        android:layout_below="@+id/relativeLayout5"
        android:layout_alignLeft="@+id/relativeLayout5"
        android:layout_alignStart="@+id/relativeLayout5"
        android:layout_marginTop="38dp"
        android:id="@+id/singup_alredayhavaaccount"></RelativeLayout>
    <RelativeLayout
        android:id="@+id/singup_singupnow"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:background="@drawable/singuo_singuonow"
        android:layout_alignTop="@+id/singup_alredayhavaaccount"
        android:layout_alignRight="@+id/relativeLayout5"
        android:layout_alignEnd="@+id/relativeLayout5">

    </RelativeLayout>


</RelativeLayout>